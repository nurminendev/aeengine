# Tools
CC		=	@CXX@
RM		=	rm -f

# Compiler flags
CFLAGS	=	@CFLAGS@
DEFS	=	@DEFS@
AELIBS	=	@AELIBS@

OBJ_EXT	=	@OBJEXT@

PLGAETXTLDR_OBJSRC	=	$(wildcard *.cpp)
PLGAETXTLDR_OBJS	=	$(addsuffix .${OBJ_EXT}, $(basename $(PLGAETXTLDR_OBJSRC)))

.cpp.${OBJ_EXT}:
	$(CC) -c -fPIC $(CFLAGS) -I../../../include/ $(DEFS) $< -o $@

all:	aetxtldr

aetxtldr:	$(PLGAETXTLDR_OBJS)
	$(CC) -shared -L../../../out/ $(PLGAETXTLDR_OBJS) $(AELIBS) -o ../../../txtldr.so

clean:
	$(RM) $(PLGAETXTLDR_OBJS)

allclean:	clean
	$(RM) Makefile