# Tools
CC		=	@CXX@
AR		=	ar rc
RANLIB	=	@RANLIB@
RM		=	rm -f

# Compiler flags
CFLAGS	=	@CFLAGS@
DEFS	=	@DEFS@

OBJ_EXT	=	@OBJEXT@

LIBAEENGINE_OBJSRC	=	$(wildcard *.cpp)
LIBAEENGINE_OBJS	=	$(addsuffix .${OBJ_EXT}, $(basename $(LIBAEENGINE_OBJSRC)))

.cpp.${OBJ_EXT}:
	$(CC) -c $(CFLAGS) -I../../../include/ $(DEFS) $< -o $@

all: aeengine

aeengine:	$(LIBAEENGINE_OBJS)
	$(AR) ../../../out/libaeengine.a $(LIBAEENGINE_OBJS)
	$(RANLIB) ../../../out/libaeengine.a

clean:
	$(RM) $(LIBAEENGINE_OBJS)

allclean:	clean
	$(RM) Makefile